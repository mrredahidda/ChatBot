<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ChatBot" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/rifle_green</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="Theme.ChatBot" parent="Base.Theme.ChatBot" />

    <style name="AppTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/dmsans_extralight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/dove_gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/slate_gray</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">#808080</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>


</resources>